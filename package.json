{
	"name": "chromini",
	"productName": "Chromini",
	"version": "1.1.4",
	"type": "module",
	"description": "A minimalist, developer-focused browser built with Electron and React.",
	"author": "canmi",
	"main": "dist-electron/main.js",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build && tsc -p tsconfig.node.json",
		"preview": "vite preview",
		"electron:dev": "concurrently -k \"vite\" \"npm run electron:start\"",
		"electron:start": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
		"electron:build": "pnpm build && electron-builder",
		"fmt": "prettier --write .",
		"check": "prettier --check ."
	},
	"devDependencies": {
		"@types/node": "^20.19.23",
		"@types/react": "^18.3.26",
		"@types/react-dom": "^18.3.7",
		"@vitejs/plugin-react": "^4.7.0",
		"autoprefixer": "^10.4.21",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"electron": "^28.3.3",
		"electron-builder": "^24.13.3",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"tailwindcss": "^3.4.18",
		"typescript": "^5.9.3",
		"vite": "^5.4.21",
		"vite-plugin-electron": "^0.29.0",
		"vite-plugin-electron-renderer": "^0.14.6",
		"wait-on": "^7.2.0"
	},
	"dependencies": {
		"lucide-react": "^0.546.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"build": {
		"appId": "net.canmi.chromini",
		"productName": "Chromini",
		"files": [
			"dist/",
			"dist-electron/",
			"package.json"
		],
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": [
				"dmg",
				"zip"
			],
			"icon": "build/icon.icns",
			"artifactName": "chromini-${version}-${arch}-mac.${ext}"
		},
		"win": {
			"target": [
				"nsis",
				"zip"
			],
			"icon": "build/icon.ico",
			"artifactName": "chromini-setup-${version}-windows.${ext}"
		},
		"linux": {
			"target": [
				"AppImage",
				"tar.gz"
			],
			"icon": "build/icon.png",
			"artifactName": "chromini-${version}-linux.${ext}"
		},
		"dmg": {
			"artifactName": "chromini-${version}-${arch}-darwin.dmg"
		}
	}
}